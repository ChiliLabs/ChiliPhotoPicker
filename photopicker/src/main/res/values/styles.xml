<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.MediaPicker.Button" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?pickerControlColor</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">sans-serif-medium</item>

        <item name="android:includeFontPadding">true</item>

        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:letterSpacing">0.0</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?pickerControlColor</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">7dp</item>
        <item name="iconTint">@null</item>

        <item name="rippleColor">?pickerControlColor</item>
    </style>

    <style name="ShapeAppearance.TopLeftRounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">?pickerCornerRadius</item>
    </style>

    <style name="ShapeAppearance.TopRightRounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">?pickerCornerRadius</item>
    </style>

    <style name="ShapeAppearance.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

</resources>